<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">

    <application
        android:allowBackup="true"
        android:dataExtractionRules="@xml/data_extraction_rules"
        android:fullBackupContent="@xml/backup_rules"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.Takenote"
        tools:targetApi="31">

        <!-- Actividad principal -->
        <activity android:name=".Home"
            android:exported="true">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <!-- Otras actividades sin categorÃ­a LAUNCHER -->
        <activity android:name=".Configuracion"
            android:exported="true" />

        <activity android:name=".Login"
            android:exported="true" />

        <activity android:name=".Editar"
            android:exported="true" />

        <activity android:name=".Registro"
            android:exported="true" />

        <activity android:name=".Papelera"
            android:exported="true" />

        <activity android:name=".Detalle"
            android:exported="true" />

        <activity android:name=".Nueva"
            android:exported="true" />

    </application>

</manifest>
