<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:padding="16dp">


    <LinearLayout
        android:id="@+id/layoutContenido"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:id="@+id/tituloNota"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="18sp" />

        <TextView
            android:id="@+id/cuerpoNota"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:textSize="14sp" />
    </LinearLayout>


    <ImageView
        android:id="@+id/iconoRestaurar"
        android:layout_width="24dp"
        android:layout_height="24dp"
        android:layout_alignParentEnd="true"
        android:layout_toStartOf="@id/layoutContenido"
        android:layout_marginEnd="5dp"
        android:src="@drawable/back"
        android:contentDescription= "Click para restaurar nota"
        />

    <ImageView
        android:id="@+id/iconoEditar"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_alignParentEnd="true"
        android:layout_toStartOf="@id/layoutContenido"
        android:layout_marginEnd="32dp" />

    <ImageView
        android:id="@+id/iconoEliminar"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_alignParentEnd="true"
        android:layout_toStartOf="@id/iconoEditar"
        android:layout_marginEnd="64dp" />

</RelativeLayout>
